<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:padding="4dp"
    android:clipToPadding="false"
    android:layout_marginTop="@dimen/toolbar_height"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="64dp">

        <!-- Month Balance -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_card_month"
            style="@style/CardContainer"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/home_month_label"
                style="@style/SecondaryText"
                android:text="@string/label_month_balance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_month_balance"
                style="@style/NumberImpact"
                android:text="@string/test_month_balance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/home_month_label"
                app:layout_constraintTop_toBottomOf="@+id/home_month_label" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/home_month_progress"
                style="@style/HomeExpensesProgress"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="2dp"
                android:contentDescription="@string/desc_balance_progress"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_month_balance" />

            <TextView
                android:id="@+id/home_month_progress_text"
                style="@style/ProgressPercentageImpact"
                android:text="@string/test_balance_progress_percent"
                app:layout_constraintBottom_toBottomOf="@+id/home_month_progress"
                app:layout_constraintEnd_toEndOf="@+id/home_month_progress"
                app:layout_constraintStart_toStartOf="@+id/home_month_progress"
                app:layout_constraintTop_toTopOf="@+id/home_month_progress" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_cumulated"
                style="@style/MySwitchButton"
                android:checked="true"
                android:text="@string/label_accrued"
                app:layout_constraintBottom_toTopOf="@+id/switch_expected"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_expected"
                style="@style/MySwitchButton"
                android:text="@string/label_expected"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Income -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_card_income"
            style="@style/CardContainerClickable"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/home_card_expenses"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/home_card_month"
            app:layout_constraintTop_toBottomOf="@+id/home_card_month">

            <TextView
                android:id="@+id/home_income_label"
                style="@style/SecondaryText"
                android:text="@string/label_income"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_income"
                style="@style/NumberMedium"
                android:layout_marginTop="20dp"
                android:text="@string/test_income_value"
                android:textAlignment="textStart"
                android:textColor="@color/income"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_income_label" />

            <ImageView
                android:id="@+id/home_income_icon"
                style="@style/SmallIcon"
                app:tint="@color/income"
                android:contentDescription="@null"
                app:srcCompat="@drawable/arrow_south_west_600"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Expenses -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_card_expenses"
            style="@style/CardContainerClickable"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="@+id/home_card_month"
            app:layout_constraintStart_toEndOf="@+id/home_card_income"
            app:layout_constraintTop_toBottomOf="@+id/home_card_month">

            <TextView
                android:id="@+id/home_expense_label"
                style="@style/SecondaryText"
                android:text="@string/label_expenses"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_expenses"
                style="@style/NumberMedium"
                android:layout_marginTop="20dp"
                android:text="@string/test_expenses_value"
                android:textAlignment="textStart"
                android:textColor="@color/expense"
                app:layout_constraintTop_toBottomOf="@id/home_expense_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/home_expenses_icon"
                style="@style/SmallIcon"
                app:tint="@color/expense"
                android:contentDescription="@null"
                app:srcCompat="@drawable/arrow_north_east_600"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Savings -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_card_savings"
            style="@style/CardContainerClickable"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_card_expenses">

            <TextView
                android:id="@+id/home_savings_label"
                style="@style/SecondaryText"
                android:text="@string/label_savings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_savings"
                style="@style/NumberMedium"
                android:layout_marginTop="20dp"
                android:text="@string/test_expenses_value"
                android:textColor="@color/savings"
                app:layout_constraintTop_toBottomOf="@id/home_savings_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/home_savings_icon" />

            <ImageView
                android:id="@+id/home_savings_icon"
                style="@style/IconMedium"
                android:contentDescription="@null"
                android:src="@drawable/ic_app_savings"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Cash -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_card_cash"
            style="@style/CardContainerClickable"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_card_savings">

            <TextView
                android:id="@+id/home_cash_label"
                style="@style/SecondaryText"
                android:text="@string/label_cash"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_cash"
                style="@style/NumberMedium"
                android:layout_marginTop="20dp"
                android:text="@string/test_expenses_value"
                android:textColor="@color/income"
                app:layout_constraintTop_toBottomOf="@id/home_cash_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/home_cash_icon" />

            <ImageView
                android:id="@+id/home_cash_icon"
                style="@style/IconMedium"
                android:contentDescription="@null"
                android:src="@drawable/ic_app_cash"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Checking -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_card_checking"
            style="@style/CardContainerClickable"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_card_cash">

            <TextView
                android:id="@+id/home_checking_label"
                style="@style/SecondaryText"
                android:text="@string/label_checking_account"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_checking"
                style="@style/NumberMedium"
                android:layout_marginTop="20dp"
                android:text="@string/test_expenses_value"
                android:textColor="@color/income"
                app:layout_constraintTop_toBottomOf="@id/home_checking_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/home_checking_icon" />

            <ImageView
                android:id="@+id/home_checking_icon"
                style="@style/IconMedium"
                android:contentDescription="@null"
                android:src="@drawable/ic_app_account_balance"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Income Categories -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_card_income_categories"
            style="@style/CardContainerClickable"
            android:layout_marginTop="16dp"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toStartOf="@+id/home_card_expenses_categories"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/home_card_checking"
            app:layout_constraintTop_toBottomOf="@+id/home_card_checking">

            <ImageView
                android:id="@+id/home_categories_in"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:scaleType="fitXY"
                android:contentDescription="@string/desc_income_categories_chart"
                app:tint="@color/colorSecondaryContainer"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_app_donut_large" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_income_categories_list"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:isScrollContainer="false"
                android:nestedScrollingEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_categories_in"
                tools:listitem="@layout/item_home_category"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Expenses Categories -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_card_expenses_categories"
            style="@style/CardContainerClickable"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toEndOf="@+id/home_card_checking"
            app:layout_constraintStart_toEndOf="@+id/home_card_income_categories"
            app:layout_constraintTop_toBottomOf="@+id/home_card_checking">

            <ImageView
                android:id="@+id/home_categories_out"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:scaleType="fitXY"
                android:contentDescription="@string/desc_expenses_categories_chart"
                app:tint="@color/colorSecondaryContainer"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_app_donut_large" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_expenses_categories_list"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:isScrollContainer="false"
                android:nestedScrollingEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_categories_out"
                tools:listitem="@layout/item_home_category"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Year -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_card_year"
            style="@style/CardContainerClickable"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_card_expenses_categories">

            <TextView
                android:id="@+id/home_year_text"
                style="@style/MainText"
                android:fontFamily="@font/red_hat_text_semi_bold"
                android:text="@string/test_year"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_year_balance"
                style="@style/NumberMedium"
                android:text="@string/test_income_value"
                android:textColor="@color/income"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/home_year_chart"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginTop="24dp"
                android:contentDescription="@string/desc_year_chart"
                android:src="@drawable/ic_bar_chart"
                app:tint="@color/colorSecondaryContainer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_year_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>