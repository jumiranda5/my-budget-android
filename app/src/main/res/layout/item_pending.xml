<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_pending_container"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/item_pending_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_pending_date"
        app:srcCompat="@drawable/ic_app_category" />

    <TextView
        android:id="@+id/item_pending_name"
        style="@style/MainTextEllipse"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/hint_description"
        android:textSize="@dimen/secondary_text"
        app:layout_constraintBottom_toBottomOf="@+id/item_pending_icon"
        app:layout_constraintEnd_toStartOf="@+id/item_pending_total"
        app:layout_constraintStart_toEndOf="@+id/item_pending_icon"
        app:layout_constraintTop_toTopOf="@+id/item_pending_icon" />

    <TextView
        android:id="@+id/item_pending_total"
        style="@style/NumberCurrency"
        android:layout_marginEnd="12dp"
        android:text="@string/test_currency_value"
        android:textColor="@color/income"
        android:textSize="@dimen/secondary_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_pending_name"
        app:layout_constraintEnd_toStartOf="@+id/item_pending_toggle" />

    <TextView
        android:id="@+id/item_pending_currency_symbol"
        style="@style/NumberMedium"
        android:text="@string/test_currency_symbol"
        android:textColor="@color/income"
        android:textSize="@dimen/secondary_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_pending_total"
        app:layout_constraintStart_toStartOf="@id/item_pending_total" />

    <!-- Todo: toggle button -->
    <ImageView
        android:id="@+id/item_pending_toggle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/item_pending_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_pending_icon"
        app:srcCompat="@drawable/ic_app_circle_24" />

    <TextView
        android:id="@+id/item_pending_date"
        style="@style/SecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="20/06/2023"
        app:layout_constraintBottom_toTopOf="@+id/item_pending_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>