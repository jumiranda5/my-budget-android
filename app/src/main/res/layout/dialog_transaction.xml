<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/dialog_transaction_dismiss"
        style="@style/IconButton"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/action_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_app_close" />

    <TextView
        android:id="@+id/dialog_transaction_title"
        style="@style/MainTitle"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Expense"
        app:layout_constraintEnd_toStartOf="@+id/dialog_transaction_dismiss"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_transaction_desc"
        style="@style/MainTextEllipse"
        android:text="Description"
        android:layout_marginTop="40dp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_transaction_title" />

    <TextView
        android:id="@+id/dialog_transaction_amount"
        style="@style/MainTextEllipse"
        android:padding="16dp"
        android:text="$ 10.00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_transaction_desc" />

    <TextView
        android:id="@+id/dialog_transaction_category"
        style="@style/MainTextEllipse"
        android:padding="16dp"
        android:text="Category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_transaction_amount" />

    <TextView
        android:id="@+id/dialog_transaction_method"
        style="@style/MainTextEllipse"
        android:padding="16dp"
        android:text="Payment Method"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_transaction_category" />

    <TextView
        android:id="@+id/dialog_transaction_paid"
        style="@style/MainTextEllipse"
        android:padding="16dp"
        android:text="Paid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_transaction_method" />

    <Button
        android:id="@+id/dialog_transaction_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_transaction_paid" />

    <Button
        android:id="@+id/dialog_transaction_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_transaction_edit"
        app:layout_constraintEnd_toStartOf="@+id/dialog_transaction_edit"
        app:layout_constraintTop_toTopOf="@+id/dialog_transaction_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>