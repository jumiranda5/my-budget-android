<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_category_item_height">

    <ImageView
        android:id="@+id/item_home_cat_circle"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_app_circle_24" />

    <TextView
        android:id="@+id/item_home_cat_text"
        style="@style/TextSecondaryEllipse"
        android:textSize="@dimen/text_secondary"
        android:layout_marginStart="8dp"
        android:text="@string/test_category_value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_home_cat_circle"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>