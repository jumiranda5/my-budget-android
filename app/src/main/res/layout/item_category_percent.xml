<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/bg_list_item"
    android:id="@+id/category_item">

    <ImageView
        android:id="@+id/category_icon"
        style="@style/IconNormal"
        android:layout_marginStart="@dimen/inner_space"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_app_home" />

    <TextView
        android:id="@+id/category_name"
        style="@style/TextNormalEllipse"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/inner_space"
        android:text="@string/category_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/category_percent"
        app:layout_constraintStart_toEndOf="@+id/category_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/category_percent"
        style="@style/Currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/initial_percent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/category_percent_nav_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/category_percent_nav_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/medium_emphasis_text"
        app:srcCompat="@drawable/ic_app_navigate_next" />


</androidx.constraintlayout.widget.ConstraintLayout>