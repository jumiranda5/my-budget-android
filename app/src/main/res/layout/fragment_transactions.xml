<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/toolbar_height"
    android:background="@color/bg_00dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TransactionsOutFragment">

    <androidx.core.widget.NestedScrollView
        style="@style/MyNestedScrollView"
        android:paddingBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/transactions_close"
                style="@style/IconButton"
                android:layout_margin="4dp"
                android:contentDescription="@string/nav_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_app_arrow_back" />


            <TextView
                android:id="@+id/transactions_title"
                style="@style/TransactionsTitle"
                android:layout_marginTop="@dimen/transactions_total_space"
                android:text="@string/label_expenses"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/transactions_total"
                style="@style/NumberImpact"
                android:layout_marginTop="2dp"
                android:text="@string/initial_value"
                android:textAlignment="center"
                android:textColor="@color/expense"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transactions_title" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/transactions_list"
                style="@style/NestedListNoScroll"
                android:layout_marginTop="@dimen/transactions_total_space_bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transactions_total"
                tools:itemCount="2"
                tools:listitem="@layout/item_transaction_day" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>