<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="false"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_item_start"
        style="@style/GuidelineStart"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_item_end"
        style="@style/GuidelineEnd"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/item_day_title"
        style="@style/MainTitle"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/red_hat_display_bold"
        android:text="Monday, 2"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_item_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_item_start"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_day_title"
        tools:listitem="@layout/item_transaction2"
        tools:itemCount="3"/>

</androidx.constraintlayout.widget.ConstraintLayout>