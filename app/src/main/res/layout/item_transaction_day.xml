<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="false"
    android:clickable="false"
    android:paddingStart="@dimen/transactions_day_padding"
    android:paddingEnd="@dimen/transactions_day_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Max width -->
    <View
        android:id="@+id/transactions_day_width_anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/page_width_anchor" />

    <ImageView
        android:id="@+id/item_day_calendar"
        style="@style/ItemIcon"
        android:visibility="visible"
        android:contentDescription="@null"
        android:layout_marginStart="@dimen/inner_space"
        app:layout_constraintBottom_toBottomOf="@+id/item_day_title"
        app:layout_constraintStart_toStartOf="@id/transactions_day_width_anchor"
        app:layout_constraintTop_toTopOf="@+id/item_day_title"
        app:srcCompat="@drawable/ic_24_calendar_month_fill1_300" />

    <TextView
        android:id="@+id/item_day_title"
        style="@style/DayTitle"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/inner_space"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:text="@string/test_monday_2"
        app:layout_constraintBottom_toTopOf="@id/item_day_list"
        app:layout_constraintStart_toEndOf="@id/item_day_calendar"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/ItemDivider"
        android:visibility="visible"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_day_title"
        app:layout_constraintStart_toEndOf="@+id/item_day_title"
        app:layout_constraintTop_toTopOf="@+id/item_day_title"
        app:layout_constraintEnd_toEndOf="@id/transactions_day_width_anchor"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_day_list"
        style="@style/NestedListNoScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/transactions_day_width_anchor"
        app:layout_constraintStart_toStartOf="@id/transactions_day_width_anchor"
        tools:itemCount="3"
        tools:listitem="@layout/item_transaction2" />

</androidx.constraintlayout.widget.ConstraintLayout>