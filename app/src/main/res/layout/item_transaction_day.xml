<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="false"
    android:clickable="false"
    android:background="@color/bg_00dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_day_text_bg"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:contentDescription="@null"
        android:background="@drawable/bg_day"
        app:layout_constraintBottom_toBottomOf="@+id/item_day_title"
        app:layout_constraintEnd_toEndOf="@+id/item_day_title"
        app:layout_constraintStart_toStartOf="@+id/item_day_title"
        app:layout_constraintTop_toTopOf="@+id/item_day_title" />

    <TextView
        android:id="@+id/item_day_title"
        style="@style/TextSecondary"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/titillium_web_semi_bold"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/inner_space"
        android:paddingEnd="16dp"
        android:text="@string/test_monday_2"
        android:textSize="@dimen/text_secondary"
        app:layout_constraintBottom_toTopOf="@id/item_day_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_day_title2"
        style="@style/TextSecondary"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="@dimen/inner_space"
        android:fontFamily="@font/titillium_web_semi_bold"
        android:text="@string/test_monday_2"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/item_day_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_day_list"
        style="@style/NestedListNoScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:itemCount="3"
        tools:listitem="@layout/item_transaction2" />

</androidx.constraintlayout.widget.ConstraintLayout>