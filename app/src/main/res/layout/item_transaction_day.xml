<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="false"
    android:clickable="false"
    android:background="@color/bg_00dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_day_text_bg"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:contentDescription="@null"
        android:background="@drawable/bg_day"
        android:backgroundTint="@color/light_grey"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/item_day_title"
        app:layout_constraintEnd_toEndOf="@+id/item_day_title"
        app:layout_constraintStart_toStartOf="@+id/item_day_title"
        app:layout_constraintTop_toTopOf="@+id/item_day_title" />

    <TextView
        android:id="@+id/item_day_title"
        style="@style/TextNormal"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/test_monday_2"
        android:textSize="@dimen/text_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_day_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_day_title"
        tools:listitem="@layout/item_transaction"
        tools:itemCount="3"/>

</androidx.constraintlayout.widget.ConstraintLayout>