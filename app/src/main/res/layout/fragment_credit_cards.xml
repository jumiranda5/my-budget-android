<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreditCardsFragment">

    <ImageButton
        android:id="@+id/cards_back_button"
        style="@style/IconButton"
        android:contentDescription="@string/nav_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_app_arrow_back" />

    <Button
        android:id="@+id/card_details_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cards_back_button" />

</androidx.constraintlayout.widget.ConstraintLayout>