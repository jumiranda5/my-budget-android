<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:focusable="true"
    android:clickable="true"
    android:id="@+id/item_transaction">

    <ImageView
        android:id="@+id/item_transaction_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_app_category" />

    <TextView
        android:id="@+id/item_transaction_name"
        style="@style/MainTextEllipse"
        android:text="@string/hint_description"
        android:textSize="@dimen/secondary_text"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_transaction_total"
        app:layout_constraintStart_toEndOf="@+id/item_transaction_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_transaction_total"
        style="@style/NumberCurrency"
        android:layout_marginEnd="12dp"
        android:text="@string/test_currency_value"
        android:textColor="@color/income"
        android:textSize="@dimen/secondary_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_transaction_name"
        app:layout_constraintEnd_toStartOf="@+id/item_transaction_toggle" />

    <TextView
        android:id="@+id/item_transaction_currency_symbol"
        style="@style/NumberMedium"
        android:text="@string/test_currency_symbol"
        android:textColor="@color/income"
        android:textSize="@dimen/secondary_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_transaction_total"
        app:layout_constraintStart_toStartOf="@id/item_transaction_total" />

    <!-- Todo: toggle button -->
    <ImageView
        android:id="@+id/item_transaction_toggle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_app_circle_24" />

</androidx.constraintlayout.widget.ConstraintLayout>