<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreditCardDetailsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/card_details_toolbar"
        style="@style/MainToolbar"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/card_details_back_button"
                style="@style/IconButton"
                android:contentDescription="@string/nav_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_app_arrow_back" />

            <ImageButton
                android:id="@+id/card_details_edit_button"
                style="@style/IconButton"
                android:contentDescription="@string/action_edit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_app_edit" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_details_start"
        style="@style/GuidelineStart"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_details_end"
        style="@style/GuidelineEnd"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/card_details_icon"
        style="@style/Icon"
        android:layout_width="@dimen/details_icon_size"
        android:layout_height="@dimen/details_icon_size"
        android:layout_marginTop="@dimen/details_icon_margin"
        android:contentDescription="@null"
        android:src="@drawable/ic_app_credit_card"
        app:layout_constraintStart_toStartOf="@id/guideline_details_start"
        app:layout_constraintTop_toBottomOf="@+id/card_details_toolbar" />

    <TextView
        android:id="@+id/card_details_title"
        style="@style/MainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_credit_card"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/details_title_size"
        app:layout_constraintStart_toStartOf="@+id/card_details_icon"
        app:layout_constraintTop_toBottomOf="@+id/card_details_icon" />

    <TextView
        android:id="@+id/card_details_total"
        style="@style/NumberCurrency"
        app:layout_constraintWidth_max="1000dp"
        android:text="$4,000.00"
        android:textSize="@dimen/details_title_size"
        app:layout_constraintBottom_toBottomOf="@+id/card_details_title"
        app:layout_constraintEnd_toEndOf="@id/guideline_details_end"
        app:layout_constraintStart_toEndOf="@+id/card_details_title"
        app:layout_constraintTop_toTopOf="@+id/card_details_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/details_icon_margin_bottom"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_transparent_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_details_title">

        <TextView
            android:id="@+id/card_details_month"
            style="@style/ToolbarMonth"
            android:layout_width="@dimen/details_month_width"
            android:layout_height="48dp"
            android:fontFamily="@font/red_hat_display_medium"
            android:textSize="@dimen/details_month_size"
            android:gravity="center"
            android:text="@string/test_month"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/toolbar_prev_month_button"
            style="@style/IconButton"
            android:contentDescription="@string/desc_previous_month"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_details_month"
            app:layout_constraintEnd_toStartOf="@+id/card_details_month"
            app:layout_constraintTop_toTopOf="@+id/card_details_month"
            app:srcCompat="@drawable/ic_app_arrow_back_ios"
            app:tint="@color/secondary_icon" />

        <ImageButton
            android:id="@+id/toolbar_next_month_button"
            style="@style/IconButton"
            android:contentDescription="@string/desc_next_month"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_details_month"
            app:layout_constraintStart_toEndOf="@+id/card_details_month"
            app:layout_constraintTop_toTopOf="@+id/card_details_month"
            app:srcCompat="@drawable/ic_app_arrow_forward_ios"
            app:tint="@color/secondary_icon" />

        <TextView
            android:id="@+id/card_details_year"
            style="@style/MainText"
            android:layout_marginStart="14dp"
            android:fontFamily="@font/red_hat_text_semi_bold"
            android:textSize="@dimen/details_year_size"
            android:text="@string/test_year"
            app:layout_constraintBottom_toBottomOf="@+id/card_details_month"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/card_details_month" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_details_month"
            tools:listitem="@layout/item_transaction2_day"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>