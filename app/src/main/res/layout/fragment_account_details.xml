<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AccountDetailsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/account_details_toolbar"
        style="@style/MainToolbar"
        android:layout_marginTop="@dimen/toolbar_height"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/account_details_back_button"
                style="@style/IconButton"
                android:contentDescription="@string/nav_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_app_arrow_back" />

            <ImageButton
                android:id="@+id/account_details_edit_button"
                style="@style/IconButton"
                android:contentDescription="@string/action_edit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_app_edit" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_details_start"
        style="@style/GuidelineStart"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_details_end"
        style="@style/GuidelineEnd"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/account_details_icon"
        style="@style/Icon"
        android:layout_width="@dimen/details_icon_size"
        android:layout_height="@dimen/details_icon_size"
        android:layout_marginTop="@dimen/details_icon_margin"
        android:contentDescription="@null"
        android:src="@drawable/ic_app_account_balance"
        app:layout_constraintStart_toStartOf="@id/guideline_details_start"
        app:layout_constraintTop_toBottomOf="@+id/account_details_toolbar" />

    <TextView
        android:id="@+id/account_details_title"
        style="@style/MainTitle"
        android:text="@string/label_checking_account"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/account_details_icon"
        app:layout_constraintTop_toBottomOf="@+id/account_details_icon" />

    <TextView
        android:id="@+id/account_details_total"
        style="@style/NumberCurrency"
        android:text="$4,000.00"
        android:textSize="@dimen/details_title_size"
        app:layout_constraintBottom_toBottomOf="@+id/account_details_title"
        app:layout_constraintEnd_toEndOf="@id/guideline_details_end"
        app:layout_constraintStart_toEndOf="@+id/account_details_title"
        app:layout_constraintTop_toTopOf="@+id/account_details_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/details_icon_margin_bottom"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_transparent_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_details_title">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/account_details_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_transaction2_day" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>