<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_item_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_account_height"
    style="@style/ClickableListItem">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_item_start"
        style="@style/GuidelineStart"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_item_end"
        style="@style/GuidelineEnd"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/item_account_icon"
        style="@style/Icon"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_item_start"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_app_account_balance" />

    <TextView
        android:id="@+id/item_account_name"
        style="@style/MainTextEllipse"
        android:layout_marginStart="12dp"
        android:text="@string/test_account_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_account_total"
        app:layout_constraintStart_toEndOf="@+id/item_account_icon"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_account_total"
        style="@style/NumberCurrency"
        android:text="@string/test_currency_value"
        android:textColor="@color/income"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_account_name"
        app:layout_constraintEnd_toEndOf="@id/guideline_item_end" />

    <TextView
        android:id="@+id/item_account_currency_symbol"
        style="@style/NumberMedium"
        android:text="@string/test_currency_symbol"
        android:textColor="@color/income"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_account_total"
        app:layout_constraintStart_toStartOf="@id/item_account_total" />


</androidx.constraintlayout.widget.ConstraintLayout>