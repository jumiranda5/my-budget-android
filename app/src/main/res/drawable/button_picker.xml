<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/input_focused"/>
            <stroke android:color="@color/input_stroke_focused" android:width="1dp"/>
            <corners android:radius="@dimen/card_corner"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_picker_pressed"/>
            <stroke android:color="@color/input_stroke_focused" android:width="1dp"/>
            <corners android:radius="@dimen/card_corner"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/bg_01dp"/>
            <stroke android:color="@color/input_stroke" android:width="1dp"/>
            <corners android:radius="@dimen/card_corner"/>
        </shape>
    </item>
</selector>