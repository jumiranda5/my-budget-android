<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/click"/>
            <stroke android:color="@color/main_text" android:width="1dp"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke android:color="@color/high_emphasis_text" android:width="1dp"/>
            <corners android:radius="@dimen/card_corner"/>
        </shape>
    </item>
</selector>