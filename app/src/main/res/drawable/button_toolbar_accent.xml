<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/button_accent"/>
            <stroke android:color="@color/button_accent_click" android:width="1dp"/>
            <corners android:radius="@dimen/corners"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_accent_click"/>
            <corners android:radius="@dimen/corners"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/disabled_button"/>
            <corners android:radius="@dimen/corners"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/button_accent"/>
            <corners android:radius="@dimen/corners"/>
        </shape>
    </item>

</selector>