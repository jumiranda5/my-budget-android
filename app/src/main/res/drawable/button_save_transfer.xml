<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/savings"/>
            <stroke android:color="@color/savings_pressed" android:width="1dp"/>
            <corners android:radius="@dimen/card_corner"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/savings_pressed"/>
            <corners android:radius="@dimen/card_corner"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/disabled_button"/>
            <corners android:radius="@dimen/card_corner"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/savings"/>
            <corners android:radius="@dimen/card_corner"/>
        </shape>
    </item>

</selector>