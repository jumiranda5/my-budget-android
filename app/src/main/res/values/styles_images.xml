<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ==========================================================
                            IMAGES STYLES
    ============================================================ -->

    <style name="MyImage" parent="AppTheme">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="tint">@color/high_emphasis_text</item>
    </style>

    <!-- Regular icons -->

    <style name="IconNormal" parent="MyImage">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="tint">@color/high_emphasis_text</item>
    </style>

    <style name="IconSmall" parent="IconNormal">
        <item name="android:layout_width">@dimen/icon_size_small</item>
        <item name="android:layout_height">@dimen/icon_size_small</item>
    </style>

    <style name="ItemIcon" parent="IconNormal">
        <item name="android:layout_width">@dimen/item_icon_size</item>
        <item name="android:layout_height">@dimen/item_icon_size</item>
    </style>

    <style name="SettingsIcon" parent="MyImage">
        <item name="android:layout_width">@dimen/settings_icon_width</item>
        <item name="android:layout_height">@dimen/settings_icon_width</item>
        <item name="android:padding">@dimen/settings_icon_padding</item>
        <item name="tint">@color/high_emphasis_text</item>
    </style>

    <!-- ===========================================================================================
                                            HOME FRAGMENT
     =========================================================================================== -->

    <style name="HomeArrow" parent="IconNormal">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="srcCompat">@drawable/ic_40_arrow_forward_fill0_300</item>
    </style>

    <style name="HomeAccountIcon" parent="IconSmall">
        <item name="android:layout_marginTop">@dimen/home_accounts_icon_margin</item>
        <item name="tint">@color/medium_emphasis_text</item>
    </style>

    <!-- ===========================================================================================
                                            DIVIDERS
     =========================================================================================== -->

    <style name="MyDivider" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="DialogDivider" parent="MyDivider">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginTop">72dp</item>
        <item name="android:background">@color/divider_darker</item>
    </style>

    <!-- ===========================================================================================

     =========================================================================================== -->

    <!-- Charts -->

    <style name="ChartImage" parent="MyImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="tint">@color/bg_progress_track</item>
    </style>

    <style name="PieChartSmall" parent="ChartImage">
        <item name="android:layout_width">@dimen/home_pie_width</item>
        <item name="layout_constraintDimensionRatio">w,1:1</item>
        <item name="srcCompat">@drawable/ic_app_donut_large</item>
    </style>

    <style name="BarChart" parent="ChartImage">
        <item name="android:src">@drawable/ic_bar_chart</item>
        <item name="layout_constraintDimensionRatio">h,3:1.5</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- Dialog -->

    <style name="DragIndicator" parent="AppTheme">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:background">@color/disabled_text</item>
    </style>

</resources>