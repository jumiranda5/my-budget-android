<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ==========================================================
                            IMAGES STYLES
    ============================================================ -->

    <style name="MyImage" parent="AppTheme">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="tint">@color/high_emphasis_text</item>
    </style>

    <!-- Regular icons -->

    <style name="IconNormal" parent="AppTheme">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="tint">@color/high_emphasis_text</item>
    </style>

    <style name="IconSmall" parent="IconNormal">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
    </style>

    <style name="HomeAccountIcon" parent="IconSmall">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginStart">@dimen/card_padding</item>
        <item name="tint">@color/medium_emphasis_text</item>
    </style>

    <style name="IconImage" parent="MyImage">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Charts -->

    <style name="ChartImage" parent="MyImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="tint">@color/bg_progress_track</item>
    </style>

    <style name="PieChartSmall" parent="ChartImage">
        <item name="android:layout_width">@dimen/home_pie_width</item>
        <item name="layout_constraintDimensionRatio">w,1:1</item>
        <item name="srcCompat">@drawable/ic_app_donut_large</item>
    </style>

    <style name="BarChart" parent="ChartImage">
        <item name="android:src">@drawable/ic_bar_chart</item>
        <item name="layout_constraintDimensionRatio">w,3:1</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- Divisors -->

    <style name="HomeDivisor" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/card_padding_top</item>
        <item name="android:background">@color/divisor</item>
    </style>

    <style name="ItemDivisor" parent="HomeDivisor">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="FormDivisor" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">@dimen/form_divisor_space</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@color/border_darker</item>
    </style>

    <style name="DialogDivisor" parent="FormDivisor">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <!-- Dialog -->

    <style name="DragIndicator" parent="AppTheme">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@color/bg_indicator</item>
    </style>

