<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ==========================================================
                                NAV BARS
    ============================================================ -->

    <style name="MainToolbar" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:elevation">0dp</item>
        <item name="android:background">@drawable/bg_toolbar</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="BottomNav" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/white</item>
        <item name="elevation">0dp</item>
        <item name="itemBackground">@drawable/bg_bottom_bar</item>
<!--        <item name="itemActiveIndicatorStyle"></item>-->
        <item name="itemIconSize">26dp</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemTextColor">@color/bottom_nav_icon_color</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <!-- ==========================================================
                                BUTTONS
    ============================================================ -->

    <style name="IconButton" parent="AppTheme">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="tint">@color/main_text</item>
    </style>

</resources>