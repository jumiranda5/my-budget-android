<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ==========================================================
                              GUIDELINES
    ============================================================ -->

    <style name="MyGuideline" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="GuidelineStart" parent="MyGuideline">
        <item name="layout_constraintGuide_begin">@dimen/page_padding</item>
    </style>

    <style name="GuidelineEnd" parent="MyGuideline">
        <item name="layout_constraintGuide_end">@dimen/page_padding</item>
    </style>

    <!-- ==========================================================
                              PROGRESS
    ============================================================ -->

    <style name="HomeExpensesProgress" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progress">0</item>
        <item name="android:rotation">180</item>
        <item name="indicatorColor">@color/expense</item>
        <item name="indicatorInset">0dp</item>
        <item name="indicatorSize">@dimen/progress_indicator</item>
        <item name="trackColor">@color/bg_progress_track</item>
        <item name="trackCornerRadius">@dimen/progress_corners</item>
        <item name="trackThickness">@dimen/progress_track</item>
    </style>



</resources>