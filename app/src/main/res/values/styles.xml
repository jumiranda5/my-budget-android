<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ==========================================================
                                NAV BARS
    ============================================================ -->

    <style name="MainToolbar" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:elevation">0dp</item>
        <item name="android:background">@drawable/bg_toolbar</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="BottomNav" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/bg_01dp</item>
        <item name="elevation">0dp</item>
        <item name="itemBackground">@drawable/bg_bottom_bar</item>
<!--        <item name="itemActiveIndicatorStyle"></item>-->
        <item name="itemIconSize">26dp</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemTextColor">@color/bottom_nav_icon_color</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <!-- ==========================================================
                            CARD VIEW
    ============================================================ -->

    <style name="CardContainer" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:paddingStart">@dimen/card_padding</item>
        <item name="android:paddingTop">@dimen/card_padding</item>
        <item name="android:paddingEnd">@dimen/card_padding</item>
        <item name="android:paddingBottom">@dimen/card_padding</item>
    </style>

    <style name="CardContainerClickable" parent="CardContainer">
        <item name="android:clickable">true</item>
        <item name="android:state_focused">true</item>
        <item name="android:background">@drawable/bg_card_click</item>
    </style>

    <!-- ==========================================================
                              PROGRESS
    ============================================================ -->

    <style name="HomeExpensesProgress" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progress">70</item>
        <item name="android:rotation">180</item>
        <item name="indicatorColor">@color/expense</item>
        <item name="indicatorInset">0dp</item>
        <item name="indicatorSize">@dimen/progress_indicator</item>
        <item name="trackColor">@color/colorSecondaryContainer</item>
        <item name="trackCornerRadius">@dimen/progress_corners</item>
        <item name="trackThickness">@dimen/progress_track</item>
    </style>

    <style name="ProgressPercentageImpact" parent="SecondaryText">
        <item name="android:fontFamily">@font/overpass_regular</item>
        <item name="android:textSize">@dimen/progress_text_size</item>
    </style>

    <!-- ==========================================================
                               LISTS
    ============================================================ -->

    <style name="CategoriesListSmall" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:isScrollContainer">false</item>
        <item name="android:nestedScrollingEnabled">false</item>
    </style>

    <!-- ==========================================================
                              IMAGES
    ============================================================ -->

    <style name="SmallIcon" parent="AppTheme">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
    </style>

    <style name="IconMedium" parent="AppTheme">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="tint">@color/high_emphasis_text</item>
    </style>

    <style name="IconMediumSecondary" parent="IconMedium">
        <item name="tint">@color/medium_emphasis_text</item>
    </style>

    <style name="PieChartSmall" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/home_pie_margin_top</item>
        <item name="android:layout_marginStart">@dimen/home_pie_margin</item>
        <item name="android:layout_marginEnd">@dimen/home_pie_margin</item>
        <item name="android:scaleType">fitXY</item>
        <item name="tint">@color/colorSecondaryContainer</item>
        <item name="layout_constraintDimensionRatio">w,1:1</item>
        <item name="srcCompat">@drawable/ic_app_donut_large</item>
    </style>

    <!-- ==========================================================
                                BUTTONS
    ============================================================ -->

    <style name="IconButton" parent="AppTheme">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="tint">@color/high_emphasis_text</item>
    </style>

    <style name="MySwitchButton" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="layout_constraintWidth_min">112dp</item>
        <item name="layout_constraintWidth_max">160dp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/red_hat_text_medium</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="track">@drawable/switch_track</item>
    </style>

    <!-- ==========================================================
                                 TEXT
    ============================================================ -->

    <style name="MainText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/high_emphasis_text</item>
        <item name="android:fontFamily">@font/red_hat_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainTextEllipse" parent="MainText">
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SecondaryText" parent="MainText">
        <item name="android:textColor">@color/medium_emphasis_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SecondaryTextEllipse" parent="SecondaryText">
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ToolbarMonth" parent="MainTextEllipse">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/red_hat_text_semi_bold</item>
    </style>

    <style name="NumberImpact" parent="MainText">
        <item name="android:layout_width">0dp</item>
        <item name="android:fontFamily">@font/overpass_semi_bold</item>
        <item name="android:textSize">@dimen/number_impact</item>
    </style>

    <style name="NumberRegular" parent="MainText">
        <item name="android:layout_width">0dp</item>
        <item name="android:fontFamily">@font/overpass_regular</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="NumberMedium" parent="NumberRegular">
        <item name="android:fontFamily">@font/overpass_medium</item>
    </style>

</resources>