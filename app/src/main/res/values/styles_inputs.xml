<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ==========================================================
                                 FIELDS
    ============================================================ -->

    <style name="Field" parent="MyBody2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="layout_constraintWidth_max">@dimen/input_max_width</item>
        <item name="android:paddingStart">@dimen/input_padding</item>
        <item name="android:paddingEnd">@dimen/input_padding</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/high_emphasis_text</item>
    </style>

    <style name="InputStyle" parent="Field">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="InputWithIcon" parent="InputStyle">
        <item name="android:paddingStart">@dimen/input_icon_space</item>
    </style>

    <style name="InputIcon" parent="AppTheme">
        <item name="android:layout_width">@dimen/input_icon_size</item>
        <item name="android:layout_height">@dimen/input_icon_size</item>
        <item name="android:padding">@dimen/input_icon_padding</item>
        <item name="tint">@color/high_emphasis_text</item>
    </style>

    <style name="InputQuantity" parent="InputStyle">
        <item name="android:layout_width">@dimen/input_height</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:inputType">number</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="WrappingLabel" parent="Field">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">12dp</item>
    </style>

</resources>