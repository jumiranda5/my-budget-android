<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ==========================================================
                             TEXT STYLES
    ============================================================ -->

    <!-- Normal Text -->

    <style name="TextNormal" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/high_emphasis_text</item>
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TextNormalEllipse" parent="TextNormal">
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextError" parent="TextNormalEllipse">
        <item name="android:textColor">@color/text_error</item>
        <item name="android:fontFamily">@font/titillium_web_regular</item>
    </style>

    <style name="SubtitleLarge" parent="TextNormalEllipse">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
    </style>

    <!-- Secondary Text -->

    <style name="TextSecondary" parent="TextNormal">
        <item name="android:textColor">@color/medium_emphasis_text</item>
        <item name="android:textSize">@dimen/text_secondary</item>
    </style>

    <style name="TextSecondaryEllipse" parent="TextSecondary">
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="HomeBody" parent="TextSecondary">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
    </style>

    <style name="HomeCategoryText" parent="TextSecondaryEllipse">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
    </style>

    <style name="Subtitle" parent="TextSecondaryEllipse">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
    </style>

    <!-- Titles -->

    <style name="Title" parent="TextNormalEllipse">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
    </style>

    <style name="DialogTitle" parent="Title">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="TransactionsTitle" parent="Title">
        <item name="android:textSize">@dimen/transactions_title_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/medium_emphasis_text</item>
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
    </style>

    <style name="TransactionsCurrencyTitle" parent="NumberImpact">
        <item name="android:textSize">@dimen/transactions_title_currency_size</item>
    </style>

    <!-- Toolbar -->

    <style name="ToolbarMonth" parent="TextNormalEllipse">
        <item name="android:textSize">@dimen/toolbar_month</item>
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
    </style>

    <style name="ToolbarNotCurrentMonth" parent="ToolbarMonth">
        <item name="android:fontFamily">@font/titillium_web_light</item>
        <item name="android:textColor">@color/medium_emphasis_text</item>
    </style>

    <style name="ToolbarTitle" parent="TextNormalEllipse">
        <item name="android:textSize">@dimen/toolbar_title</item>
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
    </style>

    <!-- Labels -->

    <style name="HomeLabelSmall" parent="TextSecondary">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
    </style>

    <style name="HomeLabel" parent="TextNormal">
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
        <item name="android:textSize">@dimen/home_label_size</item>
        <item name="android:layout_marginTop">@dimen/home_label_margin_top</item>
    </style>

    <style name="ProgressText" parent="TextSecondary">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">@dimen/progress_text_size</item>
    </style>

    <!-- Numbers -->

    <style name="Number" parent="TextNormal">
        <item name="android:text">@string/initial_value</item>
        <item name="android:fontFamily">@font/eczar_regular</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="NumberHomeIncome" parent="Number">
        <item name="android:layout_width">0dp</item>
        <item name="android:fontFamily">@font/eczar_medium</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/income</item>
        <item name="android:textSize">@dimen/home_income_size</item>
        <item name="android:layout_marginBottom">-2dp</item>
    </style>

    <style name="NumberImpact" parent="Number">
        <item name="android:layout_width">0dp</item>
        <item name="android:fontFamily">@font/eczar_medium</item>
        <item name="android:textSize">@dimen/number_impact</item>
    </style>

    <style name="Currency" parent="TextNormal">
        <item name="android:text">@string/initial_value</item>
        <item name="android:fontFamily">@font/eczar_regular</item>
    </style>

    <style name="CurrencySpace" parent="Currency">
        <item name="android:text">@string/initial_value_no_symbol</item>
        <item name="layout_constraintWidth_min">@dimen/currency_width_min</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="layout_constraintWidth_max">@dimen/currency_width_max</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="CurrencyMedium" parent="Currency">
        <item name="android:fontFamily">@font/eczar_medium</item>
    </style>

    <style name="CurrencySpaceMedium" parent="CurrencySpace">
        <item name="android:fontFamily">@font/eczar_medium</item>
    </style>

    <style name="CurrencyItem" parent="CurrencySpace">
        <item name="android:fontFamily">@font/eczar_regular</item>
    </style>

    <!-- Tabs -->

    <style name="MyTabText" parent="AppTheme">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
    </style>


</resources>