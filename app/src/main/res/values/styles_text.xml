<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ==========================================================
                               TYPOGRAPHY
    ============================================================ -->

    <!-- Text Normal / Ellipse -->

    <style name="TextNormal" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/high_emphasis_text</item>
    </style>

    <style name="TextEllipse" parent="TextNormal">
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- H3 -->
    <style name="MyHeadline3" parent="TextNormal">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <!-- H4 -->
    <style name="MyHeadline4" parent="TextNormal">
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- H6 -->
    <style name="MyHeadline5" parent="TextEllipse">
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
        <item name="android:textSize">@dimen/h5</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <!-- H6 -->
    <style name="MyHeadline6" parent="TextEllipse">
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
        <item name="android:textSize">@dimen/h6</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <!-- Subtitle 1 -->
    <style name="MySubtitle1" parent="TextEllipse">
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
        <item name="android:textSize">@dimen/subtitle1</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/high_emphasis_text</item>
    </style>

    <!-- Subtitle 2 -->
    <style name="MySubtitle2" parent="TextEllipse">
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
        <item name="android:textSize">@dimen/subtitle2</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/medium_emphasis_text</item>
    </style>

    <!-- Body 1 -->
    <style name="MyBody1" parent="TextNormal">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">@dimen/body1</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="MyBody1Number" parent="TextNormal">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">@dimen/body1</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Body 2 -->
    <style name="MyBody2" parent="TextNormal">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">@dimen/body2</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/medium_emphasis_text</item>
    </style>

    <!-- Button -->
    <style name="MyButtonText" parent="TextEllipse">
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Caption -->
    <style name="MyCaption" parent="TextEllipse">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">@dimen/caption</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Overline -->
    <style name="MyOverline" parent="TextEllipse">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">@dimen/overline</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MyOverline2" parent="TextEllipse">
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
        <item name="android:textSize">@dimen/caption</item>
        <item name="android:letterSpacing">0.12</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- ===========================================================================================
                                            CURRENCY
     =========================================================================================== -->

    <style name="Currency" parent="MyBody1Number">
        <item name="android:text">@string/initial_value</item>
    </style>

    <style name="CurrencySpace" parent="Currency">
        <item name="android:text">@string/initial_value_no_symbol</item>
        <item name="layout_constraintWidth_min">@dimen/currency_width_min</item>
        <item name="layout_constraintWidth_max">@dimen/currency_width_max</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="CurrencyMedium" parent="Currency">
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
    </style>

    <style name="CurrencySpaceMedium" parent="CurrencySpace">
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

    <style name="CurrencySymbol" parent="Currency">
        <item name="android:text">@string/currency_symbol</item>
        <item name="android:textSize">@dimen/body2</item>
    </style>

    <style name="CurrencySymbolMedium" parent="CurrencySymbol">
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
    </style>


    <!-- ===========================================================================================
                                            TOOLBAR
     =========================================================================================== -->

    <style name="ToolbarMonth" parent="MyHeadline6">
        <item name="android:layout_width">@dimen/toolbar_month_width</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@string/initial_month</item>
    </style>

    <style name="ToolbarNotCurrentMonth" parent="ToolbarMonth">
        <item name="android:fontFamily">@font/titillium_web_light</item>
        <item name="android:textColor">@color/medium_emphasis_text</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!-- ===========================================================================================
                                            BOTTOM NAV
     =========================================================================================== -->

    <style name="BottomNavText" parent="TextEllipse">
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
        <item name="android:textSize">@dimen/bottom_nav_text</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <!-- ===========================================================================================
                                               HOME
     =========================================================================================== -->

    <!-- Used on pending warning -->
    <style name="TextError" parent="TextEllipse">
        <item name="android:textColor">@color/text_error</item>
        <item name="android:fontFamily">@font/titillium_web_semi_bold</item>
        <item name="android:textSize">@dimen/body2</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="HomeBalanceLabel" parent="MySubtitle2">
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="HomeBalanceItemLabel" parent="MyOverline2">
        <item name="android:textColor">@color/medium_emphasis_text</item>
        <item name="android:textSize">@dimen/caption</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ProgressText" parent="MyBody1Number">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">@dimen/progress_text_size</item>
        <item name="android:textColor">@color/medium_emphasis_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="HomeCardLabel" parent="MySubtitle1">
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="HomeBody" parent="MyBody2">
        <!-- night mode style -->
    </style>

    <style name="HomeAccounts" parent="MyBody2">
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">@dimen/home_accounts_text_margin</item>
    </style>

    <style name="HomeAccountCurrency" parent="CurrencySpace">
        <item name="android:textSize">@dimen/body2</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

    <style name="ShrinkHomeBalance" parent="MyHeadline3">
        <item name="android:textSize">@dimen/h3_shrink</item>
    </style>

    <!-- ===========================================================================================
                                               ACCOUNTS
     =========================================================================================== -->

    <style name="AccountTitle" parent="MySubtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="DayTitle" parent="MyOverline2">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textSize">@dimen/body2</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/high_emphasis_text</item>
    </style>


    <!-- ===========================================================================================
                                               LISTS
     =========================================================================================== -->

    <style name="BodyItemEllipse" parent="MyBody1">
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ItemCurrencySymbol" parent="CurrencySymbol">
        <!-- use extra light font on night theme -->
    </style>

    <style name="ItemCurrencySpace" parent="CurrencySpace">
        <!-- use extra light font on night theme -->
    </style>

    <style name="CreditCardItem" parent="BodyItemEllipse">
        <item name="android:fontFamily">@font/titillium_web_light</item>
        <item name="android:textColor">@color/medium_emphasis_text</item>
    </style>

    <style name="CreditCardItemCurrency" parent="Currency">
        <item name="android:fontFamily">@font/titillium_web_light</item>
        <item name="android:textColor">@color/medium_emphasis_text</item>
        <item name="android:textSize">@dimen/body2</item>
    </style>

    <style name="CreditCardItemCurrencySpace" parent="CurrencySpace">
        <item name="android:fontFamily">@font/titillium_web_light</item>
        <item name="android:textColor">@color/medium_emphasis_text</item>
    </style>


    <!-- ===========================================================================================
                                              TABS
     =========================================================================================== -->

    <style name="MyTabText" parent="AppTheme">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- ==========================================================
                             TEXT STYLES
    ============================================================ -->

    <!-- Titles -->

    <style name="TransactionsOverline" parent="MyOverline2">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
    </style>

    <style name="TransactionsTotal" parent="MyHeadline4">
        <item name="android:layout_width">0dp</item>
        <item name="android:text">@string/initial_value</item>
        <item name="android:textColor">@color/expense</item>
    </style>

    <style name="DialogTitle" parent="MyHeadline6">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Other -->

    <style name="CurrencyButtonText" parent="CurrencySymbol">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">@dimen/input_icon_size</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/currency_symbol</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/eczar_semi_bold</item>
    </style>


</resources>