<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <!--
        Transitions: default is transition out => reverse to transition in
    -->

    <Transition
        android:id="@+id/transition_content"
        motion:constraintSetEnd="@+id/endContent"
        motion:constraintSetStart="@id/start"
        motion:motionInterpolator="easeInOut"
        motion:duration="125">
       <KeyFrameSet>
           <KeyAttribute
               motion:framePosition="0"
               android:alpha="1"
               android:scaleX="1.0"
               android:scaleY="1.0"
               motion:motionTarget="@+id/main_content_frame" />
           <KeyAttribute
               motion:framePosition="100"
               android:alpha="0"
               android:scaleX="0.98"
               android:scaleY="0.98"
               motion:motionTarget="@+id/main_content_frame" />
       </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/transition_content_and_bottom_bar"
        motion:constraintSetEnd="@+id/endContentAndBottomBar"
        motion:constraintSetStart="@id/start"
        motion:motionInterpolator="easeInOut"
        motion:duration="125">
        <KeyFrameSet>

            <KeyAttribute
                motion:framePosition="0"
                android:alpha="1"
                android:scaleX="1.0"
                android:scaleY="1.0"
                motion:motionTarget="@+id/main_content_frame" />
            <KeyAttribute
                motion:framePosition="100"
                android:alpha="0"
                android:scaleX="0.98"
                android:scaleY="0.98"
                motion:motionTarget="@+id/main_content_frame" />

        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/transition_content_no_bottom_bar"
        motion:constraintSetEnd="@+id/endContentAndBottomBar"
        motion:constraintSetStart="@id/endContentNoBottomBar"
        motion:motionInterpolator="easeInOut"
        motion:duration="125">
        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="0"
                android:alpha="1"
                android:scaleX="1.0"
                android:scaleY="1.0"
                motion:motionTarget="@+id/main_content_frame" />
            <KeyAttribute
                motion:framePosition="100"
                android:alpha="0"
                android:scaleX="0.98"
                android:scaleY="0.98"
                motion:motionTarget="@+id/main_content_frame" />
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/transition_content_and_bars"
        motion:constraintSetEnd="@+id/endContentAndBars"
        motion:constraintSetStart="@id/start"
        motion:motionInterpolator="easeInOut"
        motion:duration="125">
        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="0"
                android:alpha="1"
                android:scaleX="1.0"
                android:scaleY="1.0"
                motion:motionTarget="@+id/main_content_frame" />
            <KeyAttribute
                motion:framePosition="100"
                android:alpha="0"
                android:scaleX="0.98"
                android:scaleY="0.98"
                motion:motionTarget="@+id/main_content_frame" />
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/transition_content_and_toolbar_no_bottom_bar"
        motion:constraintSetEnd="@+id/endContentAndBars"
        motion:constraintSetStart="@id/endContentNoBottomBar"
        motion:motionInterpolator="easeInOut"
        motion:duration="125">
        <KeyFrameSet>

            <KeyAttribute
                motion:framePosition="0"
                android:alpha="1"
                android:scaleX="1.0"
                android:scaleY="1.0"
                motion:motionTarget="@+id/main_content_frame" />
            <KeyAttribute
                motion:framePosition="100"
                android:alpha="0"
                android:scaleX="0.98"
                android:scaleY="0.98"
                motion:motionTarget="@+id/main_content_frame" />

        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/transition_content_slide_bottom"
        motion:constraintSetEnd="@+id/endSlide"
        motion:constraintSetStart="@id/startSlide"
        motion:motionInterpolator="easeInOut"
        motion:duration="125">
        <KeyFrameSet>

            <KeyAttribute
                motion:framePosition="0"
                android:alpha="1"
                android:scaleX="1.0"
                android:scaleY="1.0"
                motion:motionTarget="@+id/main_content_frame" />
            <KeyAttribute
                motion:framePosition="100"
                android:alpha="0"
                motion:motionTarget="@+id/main_content_frame" />

        </KeyFrameSet>
    </Transition>



    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/main_toolbar"><PropertySet motion:visibilityMode="ignore"/></Constraint>
        <Constraint android:id="@+id/main_content_frame"><PropertySet motion:visibilityMode="ignore"/></Constraint>
        <Constraint android:id="@+id/main_bottom_nav_container"><PropertySet motion:visibilityMode="ignore"/></Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/endContent" motion:deriveConstraintsFrom="@id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/endContentAndBottomBar" motion:deriveConstraintsFrom="@id/start">
        <Constraint android:id="@+id/main_bottom_nav_container">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomBar_height"
                motion:layout_constraintTop_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/endContentNoBottomBar" motion:deriveConstraintsFrom="@id/start">
        <Constraint android:id="@+id/main_bottom_nav_container">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomBar_height"
                motion:layout_constraintTop_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/endContentAndBars" motion:deriveConstraintsFrom="@id/start">
        <Constraint android:id="@+id/main_toolbar">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                motion:layout_constraintBottom_toTopOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"/>
        </Constraint>
        <Constraint android:id="@+id/main_bottom_nav_container">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                motion:layout_constraintTop_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/startSlide">
        <Constraint android:id="@+id/main_toolbar">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                motion:layout_constraintBottom_toTopOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"/>
            <PropertySet motion:visibilityMode="ignore"/>
        </Constraint>
        <Constraint android:id="@+id/main_content_frame">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"/>
            <PropertySet motion:visibilityMode="ignore"/>
        </Constraint>
        <Constraint android:id="@+id/main_bottom_nav_container">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                motion:layout_constraintTop_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"/>
            <PropertySet motion:visibilityMode="ignore"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/endSlide" motion:deriveConstraintsFrom="@id/startSlide">
        <Constraint android:id="@+id/main_content_frame">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="-24dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"/>
            <PropertySet motion:visibilityMode="ignore"/>
        </Constraint>
    </ConstraintSet>

</MotionScene>