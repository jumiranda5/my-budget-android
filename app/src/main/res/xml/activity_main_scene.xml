<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <!--
        Transitions:
            - only content frame (main nav - home, accounts, account details, transactions)
            - content frame, toolbar and bottom bar (forms and category list)
    -->

    <Transition
        android:id="@+id/transition_content"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="150">
       <KeyFrameSet>

           <KeyAttribute
               motion:framePosition="0"
               android:alpha="1"
               android:scaleX="1.0"
               android:scaleY="1.0"
               motion:motionTarget="@+id/main_content_frame" />
           <KeyAttribute
               motion:framePosition="100"
               android:alpha="0"
               android:scaleX="0.94"
               android:scaleY="0.94"
               motion:motionTarget="@+id/main_content_frame" />

       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/main_toolbar"><PropertySet motion:visibilityMode="ignore"/></Constraint>
        <Constraint android:id="@+id/main_content_frame"><PropertySet motion:visibilityMode="ignore"/></Constraint>
        <Constraint android:id="@+id/main_bottom_nav_container"><PropertySet motion:visibilityMode="ignore"/></Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>